[Unit]
Description=LED Truss FastAPI Server
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/pi/led_truss
Environment=PYTHONUNBUFFERED=1
Environment=PLAYWRIGHT_BROWSERS_PATH=/opt/ms-playwright
ExecStart=/home/pi/led_truss/venv/bin/python -m uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5
TimeoutStopSec=15
KillSignal=SIGTERM
KillMode=control-group

[Install]
WantedBy=multi-user.target
